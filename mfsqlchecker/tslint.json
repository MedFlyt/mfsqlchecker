{
    "extends": [
        "tslint:latest"
    ],
    "rules": {
        "array-type": [
            true,
            "array"
        ],
        "arrow-parens": false,
        "ban-types": false, // TODO This seems useful, should be enabled
        "forin": false,
        "interface-name": false,
        "jsx-no-lambda": false,
        "jsx-no-multiline-js": false,
        "indent": [
            true,
            "spaces",
            4
        ],
        "linebreak-style": [
            true,
            "LF"
        ],
        "encoding": true,
        "max-classes-per-file": false,
        "max-line-length": false, // TODO This is probably useful, reconsider
        "member-access": false, // TODO This might be useful, reconsider
        "member-ordering": false, // TODO This might be useful, reconsider
        "no-angle-bracket-type-assertion": false,
        "no-consecutive-blank-lines": false,
        "no-console": false,
        "no-dynamic-delete": true,
        "no-default-export": true,
        "no-empty-interface": false,
        "no-import-side-effect": true,
        "no-mergeable-namespace": true,
        "no-namespace": false,
        "no-non-null-assertion": true,
        "no-require-imports": true,
        "no-string-literal": false,
        "no-switch-case-fall-through": true,
        "object-literal-key-quotes": [
            true,
            "consistent"
        ],
        "object-literal-shorthand": [
            true,
            "never"
        ],
        "object-literal-sort-keys": false,
        "align": [
            true,
            "parameters",
            "statements",
            "members"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": "never",
                "singleline": "never"
            }
        ],
        "space-before-function-paren": {
            "options": {
                "anonymous": "always",
                "asyncArrow": "always",
                "constructor": "never",
                "method": "never",
                "named": "never"
            }
        },
        "triple-equals": true,
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-pascal-case",
            "allow-leading-underscore"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-rest-spread",
            "check-type",
            "check-type-operator",
            "check-preblock"
        ],
        "type-literal-delimiter": [
            true,
            {
                "singleLine": "never"
            }
        ],
        "increment-decrement": false, // TODO This might be good
        "unnecessary-constructor": true,
        "newline-before-return": false, // TODO This might be good
        "number-literal-format": true,
        "promise-function-async": false, // TODO This is good
        "no-tautology-expression": true,
        "static-this": true,
        "no-async-without-await": true,
        "await-promise": true,
        "match-default-export-name": true,
        "no-unnecessary-qualifier": true,
        "no-for-in-array": true,
        "no-inferred-empty-object-type": true,
        "no-shadowed-variable": [
            true,
            {
                "temporalDeadZone": false
            }
        ],
        "no-unbound-method": [
            true,
            "ignore-static"
        ],
        "strict-boolean-expressions": true,
        "strict-type-predicates": true,
        "no-boolean-literal-compare": true,
        // "restrict-plus-operands": true, // TODO This is good
        "no-use-before-declare": false,
        "prefer-conditional-expression": false,
        "prefer-readonly": false, // TODO This is good
        "no-reference-import": true,
        "no-irregular-whitespace": true,
        "switch-default": true, // <https://github.com/palantir/tslint/issues/3076>
        "switch-final-break": true,
        "no-unnecessary-type-assertion": true,
        "no-implicit-dependencies": true,
        "no-submodule-imports": [
            true,
            "cldr-data",
            "core-js/fn/symbol",
            "linkifyjs/react",
            "source-map-support/register",
            "chrome-debugging-client"
        ],
        "no-duplicate-imports": [
            true,
            {
                "allow-namespace-imports": true
            }
        ],
        "no-parameter-reassignment": true
    }
}